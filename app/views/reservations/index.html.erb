<div class="container-fiuld reservations">
	<h4 class="pb-4">予約済みルーム一覧</h4>
	<table>
		<thead>
			<tr align="center">
				<th>ルーム画像</th>
				<th>ルーム名</th>
				<th>ルーム紹介</th>
				<th>合計料金</th>
				<th>開始日</th>
				<th>終了日</th>
				<th>予約確定日時</th>
			</tr>
		</thead>
		<tbody>
			<% @room.each do |room| %>
				<% room.reservations.each do |reservation| %>
					<tr>
						<td>
							<%= link_to image_tag("#{room.image}", onerror: "this.onerror=null;this.src='/assets/room01.jpg';", class: "reservations-image" ),
							room_path(room) %>
						</td>
						<td class="posts-name">
							<%= link_to room.name, room_path(room) %>
						</td>
						<td class="posts-content"><%= room.content %></td>
						<td class="price-icon"><%= reservation.total_price %></td>
						<td><%= reservation.start_date %></td>
						<td><%= reservation.end_date %></td>
						<td><%= reservation.updated_at %></td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>