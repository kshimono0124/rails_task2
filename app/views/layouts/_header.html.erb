<header class="header">
	<div class="header-inner">
		<div class="header-left-nav">
			<a href="/"><img alt="サイトのロゴ画像" src="/assets/logo.png" /></a>
			
			<%= search_form_for @q, url: search_rooms_path do |f| %>
			
				<div class="header-sharch d-lg-inline-block d-none">
					<%= f.search_field :name_cont, class: "form-control", :placeholder => "エリア" %>
					<i class="fas fa-map-marker-alt"></i>
				</div>
				
				<div class="header-sharch d-lg-inline-block d-none">
					<%= f.search_field :name_cont, class: "form-control", :placeholder => "キーワード" %>
					<i class="fas fa-search"></i>
				</div>
				<%= f.submit '', class: "d-none" %>
				
			<% end %>

		</div>
		<div class="header-right-nav">
			<% if user_signed_in? %>
				<div class="nav-item d-sm-inline-block d-none">
					<%= current_user.name %>
				</div>
					<div class="nav-item">
						<% if current_user.image? %>
						  <%= image_tag current_user.image.url, alt: "アイコン画像", class: "mx-3 p-1 host-icon nav-trigger" %>
						<% else %>
						  <%= image_tag "default_icon.jpg", alt: "メニュー", class: "mx-3 p-1 host-icon nav-trigger" %>
						<% end %>
						<ul class="header-nav-menu">
							<li><%= link_to "ルーム登録", new_room_path %></li>

							<li><%= link_to "予約済みルーム一覧", reservations_path %></li>
							
							<li><%= link_to "登録済みルーム一覧", rooms_path %></li>
							
							<li><%= link_to "設定", users_account_path %></li>
							
							<li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
						</ul>
					</div>
				</div>
   			<% else %>
   				<div class="nav-item">
					<%= link_to "ログイン", new_user_session_path, class: "btn btn-primary my-2 mx-3" %>
					<%= link_to "登録する", new_user_registration_path, class: "btn btn-secondary" %>
				</div>
			<% end %>
		</div>
	</div>
</header>